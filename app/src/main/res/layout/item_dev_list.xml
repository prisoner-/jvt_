<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:focusableInTouchMode="false"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/list_put_away"
            android:contentDescription="@string/about"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_img1"
            android:contentDescription="@string/about"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/list_equipment" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_img"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/show_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/device_address"
                android:textColor="@color/front_input"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_stting"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/more_help"
                android:focusable="false"
                android:paddingRight="10dp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>